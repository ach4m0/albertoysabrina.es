.menu-bar
    background: #222
    box-shadow: 0 0 10px rgba(0,0,0,0.5)
    font-size: 1.5em
    height: 50px
    position: fixed
    width: 100%

.menu-button
    background: url("/static/img/menu-burger.png") no-repeat center center
    background-size: 32px
    display: inline-block
    height: 48px
    width: 48px

.menu-list
    display: none
    background: $white
    list-style: none
    text-align: center
    width: 100%

.menu-item
    border-bottom: 1px solid $lightgrey
.menu-item:first-child
    border-top: 1px solid $lightgrey

.menu-link
    color: $maincolor
    display: inline-block
    padding: .8em 0
    width: 100%
.menu-link:hover
    background: $lightmaincolor
    color: $white

.logo-inmenu
    display: none


@media only screen and (min-width: $bp2)
    .menu-bar
        background: $white
        height: initial
        text-align: initial
        position: initial

    .menu-button
        display: none

    .menu-list
        display: block
        height: 50px
        margin: 0 auto
        max-width: 1024px

    .menu-item
        border: 0
        float: left
        height: 50px
        text-align: center
        width: 19%
    .menu-item:first-child
        border: 0
    .menu-link
        height: 50px

    .logo-inmenu
        display: block

